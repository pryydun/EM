<div class="card mb-3">
    @if (!string.IsNullOrEmpty(Event.ImagePath))
    {
        <img src="@Event.ImagePath" class="card-img-top" alt="@Event.Title" style="max-height: 400px; object-fit: cover;" />
    }
    else
    {
        <div class="text-center bg-light text-secondary p-5">
            <h5>No Image Available</h5>
        </div>
    }
    <div class="card-body">
        <h4 class="card-title">@Event.Title</h4>
        <p class="card-text"><strong>Description:</strong> @Event.Description</p>
        <p class="card-text"><strong>Start Date:</strong> @Event.StartDate.ToString("f")</p>
        <p class="card-text"><strong>End Date:</strong> @Event.EndDate.ToString("f")</p>
        <p class="card-text"><strong>Location:</strong> @Event.Location</p>
    </div>
</div>

@code {
    [Parameter]
    public Event? Event { get; set; }
}

